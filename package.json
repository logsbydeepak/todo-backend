{
  "name": "todo-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=dev run-s clean dev:start",
    "dev:start": "tsnd -r tsconfig-paths/register --rs --cache-directory \"./dist\" -- src/server.ts",
    "format": "prettier --write .",
    "format:watch": "onchange \"**/*\" --exclude-path .prettierignore -- prettier --write {{changed}}",
    "lint": "eslint \"./**\"",
    "lint:fix": "eslint \"./**\" --fix",
    "lint:watch": "onchange \"**/*\" --exclude-path .eslintignore -- eslint {{changed}}",
    "lint:watch:fix": "onchange \"**/*\" --exclude-path .eslintignore -- eslint {{changed}} --fix ",
    "build": "run-s clean build:start",
    "build:start": "tsc",
    "clean": "rimraf dist",
    "start": "cross-env TS_NODE_BASEURL=./dist NODE_ENV=prod node -r tsconfig-paths/register ./dist/server.js",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/logsbydeepak/todo-backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/logsbydeepak/todo-backend/issues"
  },
  "homepage": "https://github.com/logsbydeepak/todo-backend#readme",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/cryptr": "^4.0.1",
    "@types/eslint-config-prettier": "^6.11.0",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/validator": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  },
